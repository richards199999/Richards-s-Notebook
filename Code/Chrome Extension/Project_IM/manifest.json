{
    "manifest_version": 2,
    "name": "My First Extension",
    "version": "1.0",
    "description": "A simple Chrome extension",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": ["activeTab", "tabs", "https://api.openai.com/"]
  }